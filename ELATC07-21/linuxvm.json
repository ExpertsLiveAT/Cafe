{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "psarm",
      "version": "0.1.0.0",
      "psarm-psversion": "7.1.3",
      "templateHash": "10442126141975399118"
    }
  },
  "resources": [
    {
      "name": "linux-vm",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "properties": {
        "mode": "Incremental",
        "expressionEvaluationOptions": {
          "scope": "inner"
        },
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {
            "dnsLabelPrefix": {
              "type": "string",
              "defaultValue": "[toLower(concat('linuxvm-', uniqueString(resourceGroup().id)))]"
            },
            "location": {
              "type": "string",
              "defaultValue": "[resourceGroup().location]"
            }
          },
          "variables": {
            "subnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', 'ElatvNet', 'ElatSubnet')]"
          },
          "resources": [
            {
              "name": "ELATLinuxVMNetInt",
              "apiVersion": "2020-06-01",
              "type": "Microsoft.Network/networkInterfaces",
              "location": "[parameters('location')]",
              "properties": {
                "ipConfigurations": [
                  {
                    "name": "ipconfig1",
                    "properties": {
                      "subnet": {
                        "id": "[variables('subnetRef')]"
                      },
                      "privateIPAllocationMethod": "Dynamic",
                      "publicIPAddress": {
                        "id": "[resourceId('Microsoft.Network/publicIPAddresses', 'ELATLinuxVMPublicIP')]"
                      }
                    }
                  }
                ],
                "networkSecurityGroup": {
                  "id": "[resourceId('Microsoft.Network/networkSecurityGroups', 'ElatSecGroupNet')]"
                }
              },
              "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups/', 'ElatSecGroupNet')]",
                "[resourceId('Microsoft.Network/virtualNetworks/', 'ElatvNet')]",
                "[resourceId('Microsoft.Network/publicIpAddresses/', 'ELATLinuxVMPublicIP')]"
              ]
            },
            {
              "name": "ElatSecGroupNet",
              "apiVersion": "2020-06-01",
              "type": "Microsoft.Network/networkSecurityGroups",
              "location": "[parameters('location')]",
              "properties": {
                "securityRules": [
                  {
                    "name": "SSH",
                    "properties": {
                      "priority": 1000,
                      "protocol": "TCP",
                      "access": "Allow",
                      "direction": "Inbound",
                      "sourceAddressPrefix": "*",
                      "sourcePortRange": "*",
                      "destinationAddressPrefix": "*",
                      "destinationPortRange": "22"
                    }
                  }
                ]
              }
            },
            {
              "name": "ElatvNet",
              "apiVersion": "2020-06-01",
              "type": "Microsoft.Network/virtualNetworks",
              "location": "[parameters('location')]",
              "properties": {
                "addressSpace": {
                  "addressPrefixes": [
                    "10.1.0.0/16"
                  ]
                },
                "subnets": [
                  {
                    "name": "ElatSubnet",
                    "properties": {
                      "addressPrefix": "10.1.0.0/24",
                      "privateEndpointNetworkPolicies": "Enabled",
                      "privateLinkServiceNetworkPolicies": "Enabled"
                    }
                  }
                ]
              }
            },
            {
              "name": "ELATLinuxVMPublicIP",
              "apiVersion": "2020-06-01",
              "type": "Microsoft.Network/publicIPAddresses",
              "location": "[parameters('location')]",
              "sku": {
                "name": "Basic",
                "tier": "Regional"
              },
              "properties": {
                "publicIPAllocationMethod": "Dynamic",
                "publicIPAddressVersion": "IPv4",
                "dnsSettings": {
                  "domainNameLabel": "[parameters('dnsLabelPrefix')]"
                },
                "idleTimeoutInMinutes": 4
              }
            },
            {
              "name": "ELATLinuxVM",
              "apiVersion": "2020-06-01",
              "type": "Microsoft.Compute/virtualMachines",
              "location": "[parameters('location')]",
              "properties": {
                "hardwareProfile": {
                  "vmSize": "Standard_B2s"
                },
                "storageProfile": {
                  "osDisk": {
                    "createOption": "fromImage",
                    "managedDisk": {
                      "storageAccountType": "Standard_LRS"
                    }
                  },
                  "imageReference": {
                    "publisher": "Canonical",
                    "offer": "UbuntuServer",
                    "sku": "18.04-LTS",
                    "version": "latest"
                  }
                },
                "networkProfile": {
                  "networkInterfaces": [
                    {
                      "id": "[resourceId('Microsoft.Network/networkInterfaces', 'ELATLinuxVMNetInt')]"
                    }
                  ]
                },
                "osProfile": {
                  "computerName": "ELATLinuxVM",
                  "adminUsername": "elatadmin",
                  "adminPassword": "$0me$1ron3pwD"
                }
              },
              "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces/', 'ELATLinuxVMNetInt')]"
              ]
            }
          ],
          "outputs": {
            "hostname": {
              "type": "string",
              "value": "[reference('ELATLinuxVMPublicIP').dnsSettings.fqdn]"
            },
            "sshCommand": {
              "type": "string",
              "value": "[concat('ssh ', 'elatadmin', '@', reference('ELATLinuxVMPublicIP').dnsSettings.fqdn)]"
            }
          }
        }
      }
    }
  ]
}
